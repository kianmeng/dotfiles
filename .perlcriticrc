severity = 1
verbose = %f: [%p] %m at line %l, column %c (Severity %s).\n%d\n

[ControlStructures::ProhibitPostfixControls]
allow = for if until unless foreach

[Documentation::RequirePodSections]
lib_sections = NAME | SYNOPSIS | DESCRIPTION | DEVELOPMENT | METHODS | COPYRIGHT AND LICENSE | AUTHOR

[Documentation::PodSpelling]
spell_command = aspell list
stop_words = kian meng ang milla md undef webservice json https ipv4 ipv6 cpan

[-CodeLayout::RequireTidyCode]
perltidyrc = $HOME/.perltidyrc
severity = 5

[-ValuesAndExpressions::ProhibitEmptyQuotes]
[-Subroutines::RequireArgUnpacking]

[Subroutines::ProhibitUnusedPrivateSubroutines]
allow_name_regex = _build_\w+

[InputOutput::RequireCheckedSyscalls]
functions = :builtins
exclude_functions = print say

[InputOutput::RequireBriefOpen]
lines = 15

# Not necesary to have `s`, `m`, and `x` flag to all regex.
[-RegularExpressions::RequireExtendedFormatting]
[-RegularExpressions::RequireDotMatchAnything]
[-RegularExpressions::RequireLineBoundaryMatching]

[-Modules::RequireVersionVar]
[-ControlStructures::ProhibitUnlessBlocks]
[-ValuesAndExpressions::ProhibitConstantPragma]
